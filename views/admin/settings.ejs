<%- include('layout', {
    title: title,
    body: `
    <div class="row">
        <!-- EDIT HERE: Security Settings Card -->
        <div class="col-md-6">
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-shield-alt mr-1"></i> Security</h3>
                </div>
                <div class="card-body">
                    <div class="callout callout-info">
                        <h5><i class="fas fa-key"></i> Change Password</h5>
                        <p>Keep your account secure by updating your password regularly.</p>
                        <a href="/admin/change-password" class="btn btn-primary">
                            <i class="fas fa-key mr-1"></i> Change Password
                        </a>
                    </div>
                </div>
            </div>
            
            <!-- EDIT HERE: System Information Card -->
            <div class="card card-info">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-server mr-1"></i> System Information</h3>
                </div>
                <div class="card-body p-0">
                    <table class="table">
                        <tr>
                            <td><strong><i class="fas fa-code-branch mr-1"></i> CMS Version</strong></td>
                            <td>1.0.0</td>
                        </tr>
                        <tr>
                            <td><strong><i class="fab fa-node-js mr-1"></i> Node.js Version</strong></td>
                            <td>${process.version}</td>
                        </tr>
                        <tr>
                            <td><strong><i class="fas fa-desktop mr-1"></i> Platform</strong></td>
                            <td>${process.platform}</td>
                        </tr>
                        <tr>
                            <td><strong><i class="fas fa-clock mr-1"></i> Server Time</strong></td>
                            <td>${new Date().toLocaleString()}</td>
                        </tr>
                    </table>
                </div>
            </div>
        </div>
        
        <!-- EDIT HERE: Session Activity Card -->
        <div class="col-md-6">
            <div class="card card-warning">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-history mr-1"></i> Recent Session Activity</h3>
                </div>
                <div class="card-body table-responsive p-0" style="max-height: 400px;">
                    <table class="table table-head-fixed text-nowrap">
                        <thead>
                            <tr>
                                <th>Action</th>
                                <th>IP Address</th>
                                <th>Time</th>
                            </tr>
                        </thead>
                        <tbody>
` + (sessionLogs && sessionLogs.length > 0 ? sessionLogs.map(log => `
                            <tr>
                                <td>
                                    <span class="badge badge-${log.action === 'login' ? 'success' : 'secondary'}">
                                        <i class="fas fa-${log.action === 'login' ? 'sign-in-alt' : 'sign-out-alt'} mr-1"></i>
                                        ${log.action}
                                    </span>
                                </td>
                                <td><code>${log.ip_address || 'Unknown'}</code></td>
                                <td><small>${new Date(log.created_at).toLocaleString()}</small></td>
                            </tr>
`).join('') : '<tr><td colspan="3" class="text-center text-muted p-4">No recent activity logged.</td></tr>') + `
                        </tbody>
                    </table>
                </div>
            </div>
            
            <!-- EDIT HERE: Quick Actions Card -->
            <div class="card card-secondary">
                <div class="card-header">
                    <h3 class="card-title"><i class="fas fa-bolt mr-1"></i> Quick Actions</h3>
                </div>
                <div class="card-body">
                    <div class="btn-group-vertical btn-block">
                        <a href="/admin/contact-info" class="btn btn-outline-primary">
                            <i class="fas fa-building mr-1"></i> Edit Company Info
                        </a>
                        <a href="/admin/home-config" class="btn btn-outline-success">
                            <i class="fas fa-home mr-1"></i> Edit Home Page
                        </a>
                        <a href="/admin/pages" class="btn btn-outline-info">
                            <i class="fas fa-file-alt mr-1"></i> Edit Pages
                        </a>
                        <a href="/" target="_blank" class="btn btn-outline-secondary">
                            <i class="fas fa-globe mr-1"></i> View Website
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    `
}) %>
