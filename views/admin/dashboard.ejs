<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="admin-body">
    <%- include('../partials/admin-header') %>
    
    <div class="admin-container">
        <%- include('../partials/admin-sidebar') %>
        
        <main class="admin-main">
            <div class="admin-content">
                <h1><%= title %></h1>
                
                <div class="stats-grid">
                    <div class="stat-card">
                        <h3><%= stats.services %></h3>
                        <p>Services</p>
                    </div>
                    <div class="stat-card">
                        <h3><%= stats.clients %></h3>
                        <p>Clients</p>
                    </div>
                    <div class="stat-card">
                        <h3><%= stats.projects %></h3>
                        <p>Projects</p>
                    </div>
                    <div class="stat-card">
                        <h3><%= stats.certificates %></h3>
                        <p>Certificates</p>
                    </div>
                    <div class="stat-card highlight">
                        <h3><%= stats.submissions %></h3>
                        <p>Unread Messages</p>
                    </div>
                </div>
                
                <% if (locals.recentSubmissions && recentSubmissions.length > 0) { %>
                <div class="recent-submissions">
                    <h2>Recent Contact Submissions</h2>
                    <table class="admin-table">
                        <thead>
                            <tr>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Subject</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% recentSubmissions.forEach(sub => { %>
                            <tr>
                                <td><%= sub.name %></td>
                                <td><%= sub.email %></td>
                                <td><%= sub.subject %></td>
                                <td><%= new Date(sub.submitted_at).toLocaleDateString() %></td>
                                <td>
                                    <% if (sub.is_read) { %>
                                    <span class="badge badge-read">Read</span>
                                    <% } else { %>
                                    <span class="badge badge-unread">Unread</span>
                                    <% } %>
                                </td>
                            </tr>
                            <% }); %>
                        </tbody>
                    </table>
                    <a href="/admin/submissions" class="btn btn-small">View All Submissions</a>
                </div>
                <% } %>
                
                <div class="quick-actions">
                    <h2>Quick Actions</h2>
                    <div class="actions-grid">
                        <a href="/admin/pages" class="action-card">
                            <h3>ðŸ“„</h3>
                            <p>Edit Pages</p>
                        </a>
                        <a href="/admin/services" class="action-card">
                            <h3>ðŸ”§</h3>
                            <p>Manage Services</p>
                        </a>
                        <a href="/admin/clients" class="action-card">
                            <h3>ðŸ‘¥</h3>
                            <p>Manage Clients</p>
                        </a>
                        <a href="/admin/certificates" class="action-card">
                            <h3>ðŸ“œ</h3>
                            <p>Upload Certificates</p>
                        </a>
                    </div>
                </div>
            </div>
        </main>
    </div>
</body>
</html>
