<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- EDIT HERE: Page Title -->
    <title><%= typeof title !== 'undefined' ? title : 'Admin Panel' %> | UCC Engineering CMS</title>
    
    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome Icons -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
    <!-- AdminLTE 3 CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/css/adminlte.min.css">
    <!-- Custom Admin Styles -->
    <style>
        /* EDIT HERE: Custom admin styles */
        .main-sidebar {
            background: linear-gradient(180deg, #1e3a5f 0%, #2d5a8f 100%);
        }
        .brand-link {
            border-bottom: 1px solid rgba(255,255,255,0.2);
        }
        .nav-sidebar .nav-link.active {
            background-color: rgba(255,255,255,0.1) !important;
        }
        .nav-sidebar .nav-link:hover {
            background-color: rgba(255,255,255,0.05) !important;
        }
        .content-wrapper {
            background: #f4f6f9;
        }
        .card {
            box-shadow: 0 0 1px rgba(0,0,0,.125), 0 1px 3px rgba(0,0,0,.2);
        }
        .small-box {
            border-radius: 0.5rem;
        }
        .small-box .icon {
            transition: all 0.3s;
        }
        .small-box:hover .icon {
            transform: scale(1.1);
        }
    </style>
    <%- typeof extraStyles !== 'undefined' ? extraStyles : '' %>
</head>
<body class="hold-transition sidebar-mini layout-fixed">
<div class="wrapper">
    
    <!-- EDIT HERE: Main Navbar -->
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <!-- Left navbar links -->
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="/" class="nav-link" target="_blank"><i class="fas fa-globe"></i> View Website</a>
            </li>
        </ul>

        <!-- Right navbar links -->
        <ul class="navbar-nav ml-auto">
            <!-- Messages Dropdown Menu -->
            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="far fa-envelope"></i>
                    <% if (typeof unreadCount !== 'undefined' && unreadCount > 0) { %>
                    <span class="badge badge-danger navbar-badge"><%= unreadCount %></span>
                    <% } %>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <a href="/admin/submissions" class="dropdown-item">
                        <i class="fas fa-envelope mr-2"></i> View All Messages
                    </a>
                </div>
            </li>
            <!-- User Dropdown Menu -->
            <li class="nav-item dropdown">
                <a class="nav-link" data-toggle="dropdown" href="#">
                    <i class="far fa-user"></i>
                    <span class="d-none d-md-inline"><%= user ? user.username : 'Admin' %></span>
                </a>
                <div class="dropdown-menu dropdown-menu-lg dropdown-menu-right">
                    <a href="/admin/change-password" class="dropdown-item">
                        <i class="fas fa-key mr-2"></i> Change Password
                    </a>
                    <div class="dropdown-divider"></div>
                    <a href="/admin/logout" class="dropdown-item">
                        <i class="fas fa-sign-out-alt mr-2"></i> Logout
                    </a>
                </div>
            </li>
            <li class="nav-item">
                <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                    <i class="fas fa-expand-arrows-alt"></i>
                </a>
            </li>
        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- EDIT HERE: Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="/admin/dashboard" class="brand-link">
            <i class="fas fa-industry brand-image img-circle elevation-3" style="font-size: 1.5rem; margin: 0 0.8rem 0 0.5rem;"></i>
            <span class="brand-text font-weight-light">UCC Engineering</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user panel -->
            <div class="user-panel mt-3 pb-3 mb-3 d-flex">
                <div class="image">
                    <i class="fas fa-user-circle fa-2x text-light"></i>
                </div>
                <div class="info">
                    <a href="#" class="d-block text-light"><%= user ? user.username : 'Admin' %></a>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <!-- EDIT HERE: Dashboard Menu Item -->
                    <li class="nav-item">
                        <a href="/admin/dashboard" class="nav-link <%= typeof title !== 'undefined' && title.includes('Dashboard') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-tachometer-alt"></i>
                            <p>Dashboard</p>
                        </a>
                    </li>
                    
                    <!-- EDIT HERE: Content Management Menu -->
                    <li class="nav-header">CONTENT MANAGEMENT</li>
                    
                    <li class="nav-item">
                        <a href="/admin/home-config" class="nav-link <%= typeof title !== 'undefined' && title.includes('Home Page') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-home"></i>
                            <p>Home Page</p>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="/admin/pages" class="nav-link <%= typeof title !== 'undefined' && (title.includes('Manage Pages') || title.includes('Edit Page')) ? 'active' : '' %>">
                            <i class="nav-icon fas fa-file-alt"></i>
                            <p>About/Contact Pages</p>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="/admin/services" class="nav-link <%= typeof title !== 'undefined' && title.includes('Service') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-cogs"></i>
                            <p>Services</p>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="/admin/clients" class="nav-link <%= typeof title !== 'undefined' && title.includes('Client') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-building"></i>
                            <p>Clients</p>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="/admin/projects" class="nav-link <%= typeof title !== 'undefined' && title.includes('Project') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-images"></i>
                            <p>Projects Gallery</p>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="/admin/team" class="nav-link <%= typeof title !== 'undefined' && title.includes('Team') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-users"></i>
                            <p>Team Members</p>
                        </a>
                    </li>
                    
                    <!-- EDIT HERE: Documents Menu -->
                    <li class="nav-header">DOCUMENTS</li>
                    
                    <li class="nav-item">
                        <a href="/admin/certificates" class="nav-link <%= typeof title !== 'undefined' && title.includes('Certificate') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-certificate"></i>
                            <p>Certificates</p>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="/admin/downloads" class="nav-link <%= typeof title !== 'undefined' && title.includes('Download') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-download"></i>
                            <p>Downloads</p>
                        </a>
                    </li>
                    
                    <!-- EDIT HERE: Settings Menu -->
                    <li class="nav-header">SETTINGS</li>
                    
                    <li class="nav-item">
                        <a href="/admin/contact-info" class="nav-link <%= typeof title !== 'undefined' && title.includes('Contact Information') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-building"></i>
                            <p>Company Info</p>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="/admin/submissions" class="nav-link <%= typeof title !== 'undefined' && title.includes('Submission') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-envelope"></i>
                            <p>Contact Messages</p>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="/admin/settings" class="nav-link <%= typeof title !== 'undefined' && title.includes('Settings') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-sliders-h"></i>
                            <p>Settings</p>
                        </a>
                    </li>
                    
                    <li class="nav-item">
                        <a href="/admin/change-password" class="nav-link <%= typeof title !== 'undefined' && title.includes('Password') ? 'active' : '' %>">
                            <i class="nav-icon fas fa-key"></i>
                            <p>Change Password</p>
                        </a>
                    </li>
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        <!-- Content Header (Page header) -->
        <div class="content-header">
            <div class="container-fluid">
                <div class="row mb-2">
                    <div class="col-sm-6">
                        <h1 class="m-0"><%= typeof title !== 'undefined' ? title : 'Dashboard' %></h1>
                    </div>
                    <div class="col-sm-6">
                        <ol class="breadcrumb float-sm-right">
                            <li class="breadcrumb-item"><a href="/admin/dashboard">Home</a></li>
                            <li class="breadcrumb-item active"><%= typeof title !== 'undefined' ? title : 'Dashboard' %></li>
                        </ol>
                    </div>
                </div>
            </div>
        </div>
        <!-- /.content-header -->

        <!-- Main content -->
        <section class="content">
            <div class="container-fluid">
                <%- body %>
            </div>
        </section>
        <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->

    <!-- Main Footer -->
    <footer class="main-footer">
        <strong>Copyright &copy; <%= new Date().getFullYear() %> <a href="/">UCC Engineering Contractors</a>.</strong>
        All rights reserved.
        <div class="float-right d-none d-sm-inline-block">
            <b>Version</b> 1.0.0
        </div>
    </footer>
</div>
<!-- ./wrapper -->

<!-- EDIT HERE: JavaScript Dependencies -->
<!-- jQuery -->
<script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
<!-- Bootstrap 4 -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@4.6.2/dist/js/bootstrap.bundle.min.js"></script>
<!-- AdminLTE App -->
<script src="https://cdn.jsdelivr.net/npm/admin-lte@3.2/dist/js/adminlte.min.js"></script>
<!-- Chart.js -->
<script src="https://cdn.jsdelivr.net/npm/chart.js@4.4.1/dist/chart.umd.min.js"></script>

<%- typeof extraScripts !== 'undefined' ? extraScripts : '' %>
</body>
</html>
