<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/admin.css">
</head>
<body class="admin-body">
    <%- include('../partials/admin-header') %>
    <div class="admin-container">
        <%- include('../partials/admin-sidebar') %>
        <main class="admin-main">
            <div class="admin-content">
                <div class="content-header">
                    <h1><%= title %></h1>
                    <a href="/admin/services/add" class="btn btn-primary">Add New Service</a>
                </div>
                <table class="admin-table">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Order</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (locals.services && services.length > 0) { %>
                            <% services.forEach(service => { %>
                            <tr>
                                <td><%= service.name %></td>
                                <td><%= service.description ? service.description.substring(0, 50) + '...' : '' %></td>
                                <td><%= service.order_index %></td>
                                <td>
                                    <a href="/admin/services/edit/<%= service.id %>" class="btn btn-small">Edit</a>
                                    <form method="POST" action="/admin/services/delete/<%= service.id %>" style="display:inline;">
                                        <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Are you sure?')">Delete</button>
                                    </form>
                                </td>
                            </tr>
                            <% }); %>
                        <% } else { %>
                            <tr><td colspan="4">No services found</td></tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </main>
    </div>
</body>
</html>
