<%- include('layout', {
    title: title,
    body: `
    <!-- EDIT HERE: Alerts Section -->
    ${success ? '<div class="alert alert-success alert-dismissible"><button type="button" class="close" data-dismiss="alert">&times;</button><i class="icon fas fa-check"></i> Home page configuration saved successfully!</div>' : ''}
    ${errors && errors.length > 0 ? '<div class="alert alert-danger alert-dismissible"><button type="button" class="close" data-dismiss="alert">&times;</button><i class="icon fas fa-ban"></i><ul class="mb-0">' + errors.map(e => '<li>' + e.msg + '</li>').join('') + '</ul></div>' : ''}
    
    <form method="POST" action="/admin/home-config" enctype="multipart/form-data">
        <div class="row">
            <!-- EDIT HERE: Hero Section Card -->
            <div class="col-md-8">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-home mr-1"></i> Hero Section</h3>
                    </div>
                    <div class="card-body">
                        <div class="form-group">
                            <label for="hero_title"><i class="fas fa-heading mr-1"></i> Hero Title</label>
                            <input type="text" class="form-control" id="hero_title" name="hero_title" value="${homeConfig ? homeConfig.hero_title : 'UCC Engineering Contractors'}">
                        </div>
                        
                        <div class="form-group">
                            <label for="hero_subtitle"><i class="fas fa-align-left mr-1"></i> Hero Subtitle</label>
                            <input type="text" class="form-control" id="hero_subtitle" name="hero_subtitle" value="${homeConfig ? homeConfig.hero_subtitle : 'Excellence in Power Plant Maintenance & Engineering'}">
                        </div>
                        
                        <div class="form-group">
                            <label for="animated_text"><i class="fas fa-text-width mr-1"></i> Animated Text (separate with |)</label>
                            <input type="text" class="form-control" id="animated_text" name="animated_text" value="${homeConfig ? homeConfig.animated_text : 'Power Plant Maintenance|Industrial Engineering|Quality Services'}" placeholder="Text 1|Text 2|Text 3">
                            <small class="text-muted">These texts will be displayed with typing animation. Separate phrases with | character.</small>
                        </div>
                    </div>
                </div>
            </div>
            
            <div class="col-md-4">
                <!-- EDIT HERE: Hero Background Card -->
                <div class="card card-secondary">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-image mr-1"></i> Hero Background</h3>
                    </div>
                    <div class="card-body">
                        ${homeConfig && homeConfig.hero_background ? '<div class="mb-2"><img src="' + homeConfig.hero_background + '" alt="Current background" class="img-thumbnail" style="max-width: 100%;"></div>' : '<div class="mb-2 text-center"><div class="bg-secondary d-flex align-items-center justify-content-center" style="height: 150px;"><i class="fas fa-image fa-3x text-white-50"></i></div></div>'}
                        <div class="custom-file">
                            <input type="file" class="custom-file-input" id="hero_background" name="hero_background" accept="image/*">
                            <label class="custom-file-label" for="hero_background">Choose image</label>
                        </div>
                        <small class="text-muted">Recommended: 1920x1080px or larger</small>
                    </div>
                </div>
            </div>
        </div>
        
        <!-- EDIT HERE: Statistics Section Card -->
        <div class="card card-success">
            <div class="card-header">
                <h3 class="card-title"><i class="fas fa-chart-bar mr-1"></i> Statistics Section</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-3 col-sm-6">
                        <div class="info-box bg-info">
                            <span class="info-box-icon"><i class="fas fa-briefcase"></i></span>
                            <div class="info-box-content">
                                <input type="text" class="form-control form-control-sm mb-1" name="stat1_label" value="${homeConfig ? homeConfig.stat1_label : 'Projects Completed'}" placeholder="Label">
                                <input type="number" class="form-control form-control-sm" name="stat1_value" value="${homeConfig ? homeConfig.stat1_value : 500}" placeholder="Value">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="info-box bg-success">
                            <span class="info-box-icon"><i class="fas fa-smile"></i></span>
                            <div class="info-box-content">
                                <input type="text" class="form-control form-control-sm mb-1" name="stat2_label" value="${homeConfig ? homeConfig.stat2_label : 'Happy Clients'}" placeholder="Label">
                                <input type="number" class="form-control form-control-sm" name="stat2_value" value="${homeConfig ? homeConfig.stat2_value : 50}" placeholder="Value">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="info-box bg-warning">
                            <span class="info-box-icon"><i class="fas fa-clock"></i></span>
                            <div class="info-box-content">
                                <input type="text" class="form-control form-control-sm mb-1" name="stat3_label" value="${homeConfig ? homeConfig.stat3_label : 'Years Experience'}" placeholder="Label">
                                <input type="number" class="form-control form-control-sm" name="stat3_value" value="${homeConfig ? homeConfig.stat3_value : 15}" placeholder="Value">
                            </div>
                        </div>
                    </div>
                    <div class="col-md-3 col-sm-6">
                        <div class="info-box bg-danger">
                            <span class="info-box-icon"><i class="fas fa-users"></i></span>
                            <div class="info-box-content">
                                <input type="text" class="form-control form-control-sm mb-1" name="stat4_label" value="${homeConfig ? homeConfig.stat4_label : 'Team Members'}" placeholder="Label">
                                <input type="number" class="form-control form-control-sm" name="stat4_value" value="${homeConfig ? homeConfig.stat4_value : 100}" placeholder="Value">
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save mr-1"></i> Save Configuration
                </button>
                <a href="/" target="_blank" class="btn btn-secondary">
                    <i class="fas fa-eye mr-1"></i> Preview Website
                </a>
            </div>
        </div>
    </form>
    `,
    extraScripts: `
    <script>
        // EDIT HERE: Custom file input label update
        document.querySelectorAll('.custom-file-input').forEach(function(input) {
            input.addEventListener('change', function(e) {
                var fileName = e.target.files[0] ? e.target.files[0].name : 'Choose file';
                e.target.nextElementSibling.textContent = fileName;
            });
        });
    </script>
    `
}) %>
