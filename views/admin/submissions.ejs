<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/admin.css">
  <style>
    .message-cell {
      max-width: 300px;
      white-space: pre-wrap;
      word-wrap: break-word;
    }
    .message-preview {
      cursor: pointer;
      color: #0066cc;
    }
    .message-preview:hover {
      text-decoration: underline;
    }
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0,0,0,0.4);
    }
    .modal-content {
      background-color: #fefefe;
      margin: 5% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 80%;
      max-width: 600px;
      border-radius: 5px;
    }
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
    }
    .close:hover,
    .close:focus {
      color: #000;
    }
    .submission-detail {
      margin: 10px 0;
    }
    .submission-detail strong {
      display: inline-block;
      width: 100px;
    }
  </style>
</head>
<body class="admin-body">
  <%- include('../partials/admin-header') %>
  
  <div class="admin-container">
    <%- include('../partials/admin-sidebar') %>
    
    <main class="admin-main">
      <div class="admin-content">
        <h1><%= title %></h1>
        
        <table class="admin-table">
          <thead>
            <tr>
              <th>Name</th>
              <th>Email</th>
              <th>Phone</th>
              <th>Subject</th>
              <th>Message</th>
              <th>Date</th>
              <th>Status</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (locals.submissions && submissions.length > 0) { %>
              <% submissions.forEach(sub => { %>
              <tr>
                <td><%= sub.name %></td>
                <td><%= sub.email %></td>
                <td><%= sub.phone || 'N/A' %></td>
                <td><%= sub.subject %></td>
                <td class="message-cell">
                  <span class="message-preview" onclick="showMessage(<%= sub.id %>)">
                    <%= sub.message.length > 50 ? sub.message.substring(0, 50) + '...' : sub.message %>
                  </span>
                </td>
                <td><%= new Date(sub.submitted_at).toLocaleString() %></td>
                <td>
                  <% if (sub.is_read) { %>
                  <span class="badge badge-read">Read</span>
                  <% } else { %>
                  <span class="badge badge-unread">Unread</span>
                  <% } %>
                </td>
                <td>
                  <% if (!sub.is_read) { %>
                  <form method="POST" action="/admin/submissions/mark-read/<%= sub.id %>" style="display:inline;">
                    <button type="submit" class="btn btn-small">Mark Read</button>
                  </form>
                  <% } %>
                  <form method="POST" action="/admin/submissions/delete/<%= sub.id %>" style="display:inline;">
                    <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Delete?')">Delete</button>
                  </form>
                </td>
              </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="8">No submissions</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <!-- Modal for full message -->
  <div id="messageModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closeMessage()">&times;</span>
      <h2>Submission Details</h2>
      <div id="modalBody"></div>
    </div>
  </div>

  <script>
    const submissions = <%= JSON.stringify(submissions) %>;
    
    function showMessage(id) {
      const submission = submissions.find(s => s.id === id);
      if (!submission) return;
      
      const modalBody = document.getElementById('modalBody');
      modalBody.innerHTML = `
        <div class="submission-detail"><strong>Name:</strong> ${submission.name}</div>
        <div class="submission-detail"><strong>Email:</strong> ${submission.email}</div>
        <div class="submission-detail"><strong>Phone:</strong> ${submission.phone || 'N/A'}</div>
        <div class="submission-detail"><strong>Subject:</strong> ${submission.subject}</div>
        <div class="submission-detail"><strong>Date:</strong> ${new Date(submission.submitted_at).toLocaleString()}</div>
        <div class="submission-detail"><strong>Message:</strong></div>
        <div style="margin-top: 10px; padding: 10px; background: #f5f5f5; border-radius: 5px; white-space: pre-wrap;">${submission.message}</div>
      `;
      
      document.getElementById('messageModal').style.display = 'block';
    }
    
    function closeMessage() {
      document.getElementById('messageModal').style.display = 'none';
    }
    
    window.onclick = function(event) {
      const modal = document.getElementById('messageModal');
      if (event.target == modal) {
        modal.style.display = 'none';
      }
    }
  </script>
</body>
</html>
