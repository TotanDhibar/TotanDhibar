<%- include('layout', {
    title: title,
    body: `
    <!-- EDIT HERE: Pages Management Card -->
    <div class="card">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-file-alt mr-1"></i> Website Pages</h3>
        </div>
        <div class="card-body table-responsive p-0">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Page Name</th>
                        <th>Title</th>
                        <th>Last Updated</th>
                        <th style="width: 100px">Actions</th>
                    </tr>
                </thead>
                <tbody>
` + (pages && pages.length > 0 ? pages.map(page => `
                    <tr>
                        <td>
                            <span class="badge badge-primary text-uppercase">${page.page_name}</span>
                        </td>
                        <td><strong>${page.title}</strong></td>
                        <td>${new Date(page.updated_at).toLocaleDateString()}</td>
                        <td>
                            <a href="/admin/pages/edit/${page.page_name}" class="btn btn-sm btn-info">
                                <i class="fas fa-edit"></i> Edit
                            </a>
                        </td>
                    </tr>
`).join('') : '<tr><td colspan="4" class="text-center text-muted p-4">No pages found</td></tr>') + `
                </tbody>
            </table>
        </div>
        <div class="card-footer clearfix">
            <span class="text-muted">Total: ${pages ? pages.length : 0} pages</span>
        </div>
    </div>
    
    <!-- EDIT HERE: Help Card -->
    <div class="callout callout-info">
        <h5><i class="fas fa-info"></i> Page Editing</h5>
        <p>Click "Edit" to modify page content. You can use HTML in the content field for advanced formatting.</p>
    </div>
    `
}) %>
