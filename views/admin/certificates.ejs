<!DOCTYPE html>
<html>
<head>
  <meta charset="UTF-8">
  <title><%= title %></title>
  <link rel="stylesheet" href="/css/style.css">
  <link rel="stylesheet" href="/css/admin.css">
  <style>
    .preview-btn {
      margin-right: 5px;
    }
    .modal {
      display: none;
      position: fixed;
      z-index: 1000;
      left: 0;
      top: 0;
      width: 100%;
      height: 100%;
      overflow: auto;
      background-color: rgba(0,0,0,0.7);
    }
    .modal-content {
      background-color: #fefefe;
      margin: 2% auto;
      padding: 20px;
      border: 1px solid #888;
      width: 90%;
      max-width: 900px;
      height: 90vh;
      border-radius: 5px;
    }
    .close {
      color: #aaa;
      float: right;
      font-size: 28px;
      font-weight: bold;
      cursor: pointer;
    }
    .close:hover,
    .close:focus {
      color: #000;
    }
    #pdfViewer {
      width: 100%;
      height: calc(100% - 60px);
      border: none;
    }
  </style>
</head>
<body class="admin-body">
  <%- include('../partials/admin-header') %>
  
  <div class="admin-container">
    <%- include('../partials/admin-sidebar') %>
    
    <main class="admin-main">
      <div class="admin-content">
        <h1><%= title %></h1>
        
        <form method="POST" action="/admin/certificates/add" enctype="multipart/form-data" class="admin-form" style="max-width:600px;margin-bottom:30px;">
          <h3>Upload New Certificate</h3>
          <div class="form-group">
            <label>Title *</label>
            <input type="text" name="title" required>
          </div>
          <div class="form-group">
            <label>Description</label>
            <textarea name="description" rows="3"></textarea>
          </div>
          <div class="form-group">
            <label>PDF File *</label>
            <input type="file" name="file" accept=".pdf,.jpg,.jpeg,.png" required>
            <input type="hidden" name="uploadType" value="certificates">
            <small>Accepted formats: PDF, JPG, JPEG, PNG</small>
          </div>
          <button type="submit" class="btn btn-primary">Upload Certificate</button>
        </form>
        
        <h2>Uploaded Certificates</h2>
        <table class="admin-table">
          <thead>
            <tr>
              <th>Title</th>
              <th>Description</th>
              <th>Upload Date</th>
              <th>Actions</th>
            </tr>
          </thead>
          <tbody>
            <% if (locals.certificates && certificates.length > 0) { %>
              <% certificates.forEach(cert => { %>
              <tr>
                <td><%= cert.title %></td>
                <td><%= cert.description || '' %></td>
                <td><%= new Date(cert.upload_date).toLocaleDateString() %></td>
                <td>
                  <button class="btn btn-small preview-btn" onclick="previewCertificate('<%= cert.file_path %>', '<%= cert.title %>')">Preview</button>
                  <a href="<%= cert.file_path %>" class="btn btn-small" target="_blank" download>Download</a>
                  <form method="POST" action="/admin/certificates/delete/<%= cert.id %>" style="display:inline;">
                    <button type="submit" class="btn btn-small btn-danger" onclick="return confirm('Delete?')">Delete</button>
                  </form>
                </td>
              </tr>
              <% }); %>
            <% } else { %>
              <tr>
                <td colspan="4">No certificates uploaded</td>
              </tr>
            <% } %>
          </tbody>
        </table>
      </div>
    </main>
  </div>

  <!-- Modal for certificate preview -->
  <div id="certificateModal" class="modal">
    <div class="modal-content">
      <span class="close" onclick="closePreview()">&times;</span>
      <h2 id="certificateTitle"></h2>
      <iframe id="pdfViewer" src=""></iframe>
    </div>
  </div>

  <script>
    function previewCertificate(filePath, title) {
      document.getElementById('certificateTitle').textContent = title;
      
      const fileExt = filePath.split('.').pop().toLowerCase();
      const viewer = document.getElementById('pdfViewer');
      
      if (fileExt === 'pdf') {
        viewer.src = filePath;
      } else {
        // For images, create an img tag instead
        viewer.style.display = 'none';
        const img = document.createElement('img');
        img.src = filePath;
        img.style.maxWidth = '100%';
        img.style.maxHeight = 'calc(100% - 60px)';
        img.id = 'imageViewer';
        viewer.parentNode.insertBefore(img, viewer);
      }
      
      document.getElementById('certificateModal').style.display = 'block';
    }
    
    function closePreview() {
      const modal = document.getElementById('certificateModal');
      modal.style.display = 'none';
      
      // Reset viewer
      const viewer = document.getElementById('pdfViewer');
      viewer.src = '';
      viewer.style.display = 'block';
      
      // Remove image viewer if it exists
      const imgViewer = document.getElementById('imageViewer');
      if (imgViewer) {
        imgViewer.remove();
      }
    }
    
    window.onclick = function(event) {
      const modal = document.getElementById('certificateModal');
      if (event.target == modal) {
        closePreview();
      }
    }
  </script>
</body>
</html>
