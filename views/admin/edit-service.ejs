<%- include('layout', {
    title: title,
    body: `
    <!-- EDIT HERE: Back Button -->
    <div class="row mb-3">
        <div class="col-12">
            <a href="/admin/services" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-1"></i> Back to Services
            </a>
        </div>
    </div>
    
    <!-- EDIT HERE: Alerts Section -->
    ${success ? '<div class="alert alert-success alert-dismissible"><button type="button" class="close" data-dismiss="alert">&times;</button><i class="icon fas fa-check"></i> Service saved successfully!</div>' : ''}
    ${errors && errors.length > 0 ? '<div class="alert alert-danger alert-dismissible"><button type="button" class="close" data-dismiss="alert">&times;</button><i class="icon fas fa-ban"></i><ul class="mb-0">' + errors.map(e => '<li>' + e.msg + '</li>').join('') + '</ul></div>' : ''}
    
    <!-- EDIT HERE: Service Form Card -->
    <div class="card card-primary">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-cogs mr-1"></i> ${service ? 'Edit' : 'Add New'} Service</h3>
        </div>
        <form method="POST" enctype="multipart/form-data">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <!-- EDIT HERE: Service Name -->
                        <div class="form-group">
                            <label for="name"><i class="fas fa-tag mr-1"></i> Service Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" value="${service ? service.name : ''}" required placeholder="Enter service name">
                            <small class="text-muted">This will also be used to generate the URL slug</small>
                        </div>
                        
                        <!-- EDIT HERE: Short Description -->
                        <div class="form-group">
                            <label for="description"><i class="fas fa-align-left mr-1"></i> Short Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3" placeholder="Brief description for service cards">${service ? (service.description || '') : ''}</textarea>
                        </div>
                        
                        <!-- EDIT HERE: Detailed Description -->
                        <div class="form-group">
                            <label for="detailed_description"><i class="fas fa-file-alt mr-1"></i> Detailed Description (HTML allowed)</label>
                            <textarea class="form-control" id="detailed_description" name="detailed_description" rows="8" placeholder="Full description for the service detail page. You can use HTML tags.">${service ? (service.detailed_description || '') : ''}</textarea>
                            <small class="text-muted">This content will appear on the service detail page. You can include HTML formatting.</small>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <!-- EDIT HERE: Service Image -->
                        <div class="form-group">
                            <label><i class="fas fa-image mr-1"></i> Service Image</label>
                            ${service && service.image ? '<div class="mb-2"><img src="' + service.image + '" alt="Current image" class="img-thumbnail" style="max-width: 100%;"></div>' : ''}
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="image" name="image" accept="image/*">
                                <label class="custom-file-label" for="image">Choose file</label>
                            </div>
                            <small class="text-muted">Recommended: 1200x800px or larger (JPG, PNG, GIF)</small>
                        </div>
                        
                        <!-- EDIT HERE: Icon Selection -->
                        <div class="form-group">
                            <label for="icon"><i class="fas fa-icons mr-1"></i> Icon</label>
                            <select class="form-control" id="icon" name="icon">
                                <option value="wrench" ${service && service.icon === 'wrench' ? 'selected' : ''}>üîß Wrench</option>
                                <option value="fire" ${service && service.icon === 'fire' ? 'selected' : ''}>üî• Fire</option>
                                <option value="wind" ${service && service.icon === 'wind' ? 'selected' : ''}>üí® Wind</option>
                                <option value="thermometer" ${service && service.icon === 'thermometer' ? 'selected' : ''}>üå°Ô∏è Thermometer</option>
                                <option value="bolt" ${service && service.icon === 'bolt' ? 'selected' : ''}>‚ö° Bolt</option>
                                <option value="anchor" ${service && service.icon === 'anchor' ? 'selected' : ''}>‚öì Anchor</option>
                                <option value="pause" ${service && service.icon === 'pause' ? 'selected' : ''}>‚è∏Ô∏è Pause</option>
                                <option value="gear" ${service && service.icon === 'gear' ? 'selected' : ''}>‚öôÔ∏è Gear</option>
                            </select>
                        </div>
                        
                        <!-- EDIT HERE: Display Order -->
                        <div class="form-group">
                            <label for="order_index"><i class="fas fa-sort-numeric-up mr-1"></i> Display Order</label>
                            <input type="number" class="form-control" id="order_index" name="order_index" value="${service ? service.order_index : 0}" min="0">
                            <small class="text-muted">Lower numbers appear first</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-primary">
                    <i class="fas fa-save mr-1"></i> ${service ? 'Update' : 'Add'} Service
                </button>
                <a href="/admin/services" class="btn btn-secondary">
                    <i class="fas fa-times mr-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
    `,
    extraScripts: `
    <script>
        // EDIT HERE: Custom file input label update
        document.querySelector('.custom-file-input').addEventListener('change', function(e) {
            var fileName = e.target.files[0] ? e.target.files[0].name : 'Choose file';
            e.target.nextElementSibling.textContent = fileName;
        });
    </script>
    `
}) %>
