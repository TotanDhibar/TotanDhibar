<%- include('layout', {
    title: title,
    body: `
    <!-- EDIT HERE: Back Button -->
    <div class="row mb-3">
        <div class="col-12">
            <a href="/admin/team" class="btn btn-secondary">
                <i class="fas fa-arrow-left mr-1"></i> Back to Team
            </a>
        </div>
    </div>
    
    <!-- EDIT HERE: Alerts Section -->
    ${success ? '<div class="alert alert-success alert-dismissible"><button type="button" class="close" data-dismiss="alert">&times;</button><i class="icon fas fa-check"></i> Team member saved successfully!</div>' : ''}
    ${errors && errors.length > 0 ? '<div class="alert alert-danger alert-dismissible"><button type="button" class="close" data-dismiss="alert">&times;</button><i class="icon fas fa-ban"></i><ul class="mb-0">' + errors.map(e => '<li>' + e.msg + '</li>').join('') + '</ul></div>' : ''}
    
    <!-- EDIT HERE: Team Member Form Card -->
    <div class="card card-info">
        <div class="card-header">
            <h3 class="card-title"><i class="fas fa-user mr-1"></i> ${member ? 'Edit' : 'Add'} Team Member</h3>
        </div>
        <form method="POST" action="/admin/team/${member ? 'edit/' + member.id : 'add'}" enctype="multipart/form-data">
            <div class="card-body">
                <div class="row">
                    <div class="col-md-8">
                        <!-- EDIT HERE: Name -->
                        <div class="form-group">
                            <label for="name"><i class="fas fa-user mr-1"></i> Name <span class="text-danger">*</span></label>
                            <input type="text" class="form-control" id="name" name="name" value="${member ? member.name : ''}" required placeholder="Enter full name">
                        </div>
                        
                        <!-- EDIT HERE: Position -->
                        <div class="form-group">
                            <label for="position"><i class="fas fa-briefcase mr-1"></i> Position</label>
                            <input type="text" class="form-control" id="position" name="position" value="${member ? (member.position || '') : ''}" placeholder="e.g., Project Manager">
                        </div>
                        
                        <!-- EDIT HERE: Bio -->
                        <div class="form-group">
                            <label for="bio"><i class="fas fa-align-left mr-1"></i> Bio</label>
                            <textarea class="form-control" id="bio" name="bio" rows="4" placeholder="Brief description about the team member">${member ? (member.bio || '') : ''}</textarea>
                        </div>
                        
                        <div class="row">
                            <div class="col-md-6">
                                <!-- EDIT HERE: Email -->
                                <div class="form-group">
                                    <label for="email"><i class="fas fa-envelope mr-1"></i> Email</label>
                                    <input type="email" class="form-control" id="email" name="email" value="${member ? (member.email || '') : ''}" placeholder="email@example.com">
                                </div>
                            </div>
                            <div class="col-md-6">
                                <!-- EDIT HERE: Phone -->
                                <div class="form-group">
                                    <label for="phone"><i class="fas fa-phone mr-1"></i> Phone</label>
                                    <input type="tel" class="form-control" id="phone" name="phone" value="${member ? (member.phone || '') : ''}" placeholder="+91-XXXXXXXXXX">
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4">
                        <!-- EDIT HERE: Photo -->
                        <div class="form-group">
                            <label><i class="fas fa-image mr-1"></i> Photo</label>
                            ${member && member.photo ? '<div class="mb-2 text-center"><img src="' + member.photo + '" alt="Current photo" class="img-thumbnail rounded-circle" style="width: 150px; height: 150px; object-fit: cover;"></div>' : '<div class="mb-2 text-center"><div class="bg-secondary rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 150px; height: 150px;"><i class="fas fa-user fa-4x text-white-50"></i></div></div>'}
                            <div class="custom-file">
                                <input type="file" class="custom-file-input" id="photo" name="photo" accept="image/*">
                                <label class="custom-file-label" for="photo">Choose file</label>
                            </div>
                            <small class="text-muted">Recommended: 400x400px square image</small>
                        </div>
                        
                        <!-- EDIT HERE: Display Order -->
                        <div class="form-group">
                            <label for="order_index"><i class="fas fa-sort-numeric-up mr-1"></i> Display Order</label>
                            <input type="number" class="form-control" id="order_index" name="order_index" value="${member ? member.order_index : 0}" min="0">
                            <small class="text-muted">Lower numbers appear first</small>
                        </div>
                    </div>
                </div>
            </div>
            <div class="card-footer">
                <button type="submit" class="btn btn-info">
                    <i class="fas fa-save mr-1"></i> ${member ? 'Update' : 'Add'} Team Member
                </button>
                <a href="/admin/team" class="btn btn-secondary">
                    <i class="fas fa-times mr-1"></i> Cancel
                </a>
            </div>
        </form>
    </div>
    `,
    extraScripts: `
    <script>
        // EDIT HERE: Custom file input label update
        document.querySelector('.custom-file-input').addEventListener('change', function(e) {
            var fileName = e.target.files[0] ? e.target.files[0].name : 'Choose file';
            e.target.nextElementSibling.textContent = fileName;
        });
    </script>
    `
}) %>
